{% style %}
  .text-left {
    text-align: left;
  }
  .text-center {
    text-align: center;
  }
  .text-right {
    text-align: right;
  }
{% endstyle %}
{% if block.settings.heading_role == 'heading' %}
 {% assign tag = block.settings.heading_type %}
{% else %}
 {% assign tag = 'span' %}
{% endif %}
<header>
<{{ tag }} class="text-{{ block.settings.alignment }} {{ block.settings.heading_type }}" role="heading" aria-level="{{ block.settings.heading_type | slice: 1 }}">
  {{ block.settings.text }}
</{{ tag }}>
</header>
  
{% schema %}
{
  "name": "Heading",
  "settings": [
    {
      "type": "inline_richtext",
      "id": "text",
      "label": "Text"
    },
    {
      "type": "text_alignment",
      "id": "alignment",
      "label": "Alignment"
    },
{
      "type": "select",
      "id": "heading_type",
      "label": "Heading level",
      "info": "Select heading level tree",
      "options": [
        {
          "value": "h1",
          "label": "H1"
        },
        {
          "value": "h2",
          "label": "H2"
        },
        {
          "value": "h3",
          "label": "H3"
        },
        {
          "value": "h4",
          "label": "H4"
        },
        {
          "value": "h5",
          "label": "H5"
        },
        {
          "value": "h6",
          "label": "H6"
        }
      ],
      "default": "h2"
    },
{
      "type": "select",
      "id": "heading_role",
      "label": "Heading type",
      "info": "Select the tag: role only for accessibility",
      "options": [
        {
          "value": "heading",
          "label": "Heading"
        },
        {
          "value": "role",
          "label": "Role"
        }
      ],
      "default": "heading"
    },    
  ],
  "presets": [
    {
      "name": "Heading",
      "category": "01. BTW - Text",
      "settings": {
        "text": "Hello, world!"
      }
    }
  ]
}
{% endschema %}
