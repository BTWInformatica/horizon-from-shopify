{% style %}
  #shopify-section-{{ section.id }}>div {
    flex-wrap: {{ section.settings.wrap_mobile }};
  }
  .custom-section {
    padding-right:1.5rem;
    padding-left:1.5rem;
  }
  {% if section.settings.wrap_mobile == 'wrap' %}
    @media screen and (max-width: 749px) {
      #shopify-section-{{ section.id }} .shopify-block {
        flex-basis: 100%;
      }
    }
  {% endif %}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
  {% if section.settings.full_width == false %}
    #shopify-section-{{ section.id }} .max_width {
      max-width: {{ section.settings.max_width }}px;
    }
  {% endif %}
  @media screen and (min-width: 750px) {
    .custom-section {
      padding-right:5rem;
      padding-left:5rem;
    }
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
    #shopify-section-{{ section.id }}>div {
      flex-wrap: {{ section.settings.wrap }};
    }
  }
{% endstyle %}
<div
  class="{% if section.settings.full_width == false %}page-width-desktop page-width max_width {% else %}full-width{% endif %} section-{{ section.id }}-padding custom-section color-{{ section.settings.color_scheme }} {{ section.settings.custom_class }}"
  style="display: flex; column-gap: {{ section.settings.column-gap }}px; row-gap: {{ section.settings.row-gap }}px;"
>
  {% content_for 'blocks' %}
  {%- content_for 'block', type: '_product-list-content', id: 'static-header' -%}
</div>

{% schema %}
{
  "name": "Advanced section",
  "class": "section-wrapper",
  "blocks": [{ "type": "@theme" }, { "type": "@app" }, { "type": "_divider" }],
  "settings": [
    {
      "type": "select",
      "id": "wrap",
      "label": "Single row (wrap)",
      "options": [
        {
          "value": "nowrap",
          "label": "Nowrap"
        },
        {
          "value": "wrap",
          "label": "Wrap"
        }
      ],
      "default": "nowrap"
    },
    {
      "type": "select",
      "id": "wrap_mobile",
      "label": "Single row on mobile (wrap)",
      "options": [
        {
          "value": "nowrap",
          "label": "Nowrap"
        },
        {
          "value": "wrap",
          "label": "Wrap"
        }
      ],
      "default": "wrap"
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Desktop full width",
      "default": false
    },
    {
      "type": "range",
      "id": "max_width",
      "min": 1000,
      "max": 1900,
      "step": 15,
      "unit": "px",
      "label": "Max Width (works if full width is disabled)",
      "default": 1600
    },
    {
      "type": "header",
      "content": "Color"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "row-gap",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Row gap",
      "default": 0
    },
    {
      "type": "range",
      "id": "column-gap",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Column gap",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    },
    {
      "type": "text",
      "id": "custom_class",
      "label": "Enter a custom class for this section"
    }
  ],
  "presets": [
    {
      "name": "Advanced section"
    }
  ]
}
{% endschema %}
