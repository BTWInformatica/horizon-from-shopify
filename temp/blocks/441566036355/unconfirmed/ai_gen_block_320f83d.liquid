{% doc %}
  @prompt
    A featured collection carousel on the left and the collection image on the right

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-collection-showcase-{{ ai_gen_id }} {
    display: flex;
    gap: 40px;
    align-items: center;
    padding: {{ block.settings.section_padding }}px 0;
    background-color: {{ block.settings.background_color }};
  }

  .ai-collection-showcase__carousel-{{ ai_gen_id }} {
    flex: 1;
    min-width: 0;
  }

  .ai-collection-showcase__image-{{ ai_gen_id }} {
    flex: 0 0 {{ block.settings.image_width }}%;
    position: relative;
  }

  .ai-collection-showcase__image-wrapper-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: {{ block.settings.image_aspect_ratio }};
    border-radius: {{ block.settings.image_border_radius }}px;
    overflow: hidden;
  }

  .ai-collection-showcase__image-wrapper-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-collection-showcase__image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-collection-showcase__image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 200px;
    max-height: 200px;
  }

  .ai-collection-showcase__empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-collection-showcase__header-{{ ai_gen_id }} {
    margin-bottom: 24px;
  }

  .ai-collection-showcase__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0 0 8px 0;
  }

  .ai-collection-showcase__description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.text_color }};
    opacity: 0.8;
    margin: 0;
  }

  .ai-collection-showcase__products-{{ ai_gen_id }} {
    position: relative;
  }

  .ai-collection-showcase__products-wrapper-{{ ai_gen_id }} {
    overflow: hidden;
    border-radius: {{ block.settings.carousel_border_radius }}px;
  }

  .ai-collection-showcase__products-track-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.product_gap }}px;
    transition: transform 0.3s ease;
  }

  .ai-collection-showcase__product-{{ ai_gen_id }} {
    flex: 0 0 {{ block.settings.product_width }}px;
    background-color: {{ block.settings.product_card_bg }};
    border-radius: {{ block.settings.product_border_radius }}px;
    overflow: hidden;
    border: 1px solid {{ block.settings.product_border_color }};
  }

  .ai-collection-showcase__product-image-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: 1;
    position: relative;
    overflow: hidden;
  }

  .ai-collection-showcase__product-image-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-collection-showcase__product-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-collection-showcase__product-image-placeholder-{{ ai_gen_id }} svg {
    width: 60px;
    height: 60px;
  }

  .ai-collection-showcase__product-info-{{ ai_gen_id }} {
    padding: 16px;
  }

  .ai-collection-showcase__product-title-{{ ai_gen_id }} {
    font-size: 14px;
    font-weight: 600;
    color: {{ block.settings.text_color }};
    margin: 0 0 8px 0;
    line-height: 1.3;
  }

  .ai-collection-showcase__product-price-{{ ai_gen_id }} {
    font-size: 14px;
    color: {{ block.settings.text_color }};
    margin: 0;
  }

  .ai-collection-showcase__nav-{{ ai_gen_id }} {
    display: flex;
    gap: 8px;
    margin-top: 20px;
  }

  .ai-collection-showcase__nav-button-{{ ai_gen_id }} {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background-color: {{ block.settings.nav_button_bg }};
    border: 1px solid {{ block.settings.nav_button_border }};
    color: {{ block.settings.nav_button_color }};
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
  }

  .ai-collection-showcase__nav-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.nav_button_hover_bg }};
    color: {{ block.settings.nav_button_hover_color }};
  }

  .ai-collection-showcase__nav-button-{{ ai_gen_id }}:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  .ai-collection-showcase__nav-button-{{ ai_gen_id }} svg {
    width: 20px;
    height: 20px;
  }

  .ai-collection-showcase__empty-products-{{ ai_gen_id }} {
    text-align: center;
    padding: 40px 20px;
    color: #666;
    font-style: italic;
  }

  @media screen and (max-width: 768px) {
    .ai-collection-showcase-{{ ai_gen_id }} {
      flex-direction: column;
      gap: 24px;
    }

    .ai-collection-showcase__image-{{ ai_gen_id }} {
      flex: none;
      width: 100%;
    }

    .ai-collection-showcase__product-{{ ai_gen_id }} {
      flex: 0 0 {{ block.settings.product_width | times: 0.8 }}px;
    }
  }
{% endstyle %}

<collection-showcase-{{ ai_gen_id }}
  class="ai-collection-showcase-{{ ai_gen_id }}"
  data-products-per-view="{{ block.settings.products_per_view }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-collection-showcase__carousel-{{ ai_gen_id }}">
    {% if block.settings.featured_collection %}
      <div class="ai-collection-showcase__header-{{ ai_gen_id }}">
        <h2 class="ai-collection-showcase__title-{{ ai_gen_id }}">
          {{ block.settings.featured_collection.title }}
        </h2>
        {% if block.settings.featured_collection.description != blank %}
          <p class="ai-collection-showcase__description-{{ ai_gen_id }}">
            {{ block.settings.featured_collection.description | truncate: 150 }}
          </p>
        {% endif %}
      </div>

      <div class="ai-collection-showcase__products-{{ ai_gen_id }}">
        {% if block.settings.featured_collection.products.size > 0 %}
          <div class="ai-collection-showcase__products-wrapper-{{ ai_gen_id }}">
            <div class="ai-collection-showcase__products-track-{{ ai_gen_id }}">
              {% for product in block.settings.featured_collection.products limit: 12 %}
                <div class="ai-collection-showcase__product-{{ ai_gen_id }}"><a href="{{ product.url }}" class="ai-collection-showcase__product-link-{{ ai_gen_id }}">
                    <div class="ai-collection-showcase__product-image-{{ ai_gen_id }}">
                      {% if product.featured_image %}
                        <img
                          src="{{ product.featured_image | image_url: width: 400 }}"
                          alt="{{ product.featured_image.alt | escape }}"
                          width="400"
                          height="400"
                          loading="lazy"
                        >
                      {% else %}
                        <div class="ai-collection-showcase__product-image-placeholder-{{ ai_gen_id }}">
                          {{ 'product-1' | placeholder_svg_tag }}
                        </div>
                      {% endif %}
                    </div>
                    <div class="ai-collection-showcase__product-info-{{ ai_gen_id }}">
                      <h3 class="ai-collection-showcase__product-title-{{ ai_gen_id }}">
                        {{ product.title }}
                      </h3>
                      <p class="ai-collection-showcase__product-price-{{ ai_gen_id }}">
                        {{ product.price | money }}
                      </p>
                    </div>
                  </a>
                </div>
              {% endfor %}
            </div>
          </div>

          {% if block.settings.featured_collection.products.size > block.settings.products_per_view %}
            <div class="ai-collection-showcase__nav-{{ ai_gen_id }}">
              <button
                class="ai-collection-showcase__nav-button-{{ ai_gen_id }} ai-collection-showcase__prev-{{ ai_gen_id }}"
                aria-label="Previous products"
              >
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <polyline points="15,18 9,12 15,6"></polyline>
                </svg>
              </button>
              <button
                class="ai-collection-showcase__nav-button-{{ ai_gen_id }} ai-collection-showcase__next-{{ ai_gen_id }}"
                aria-label="Next products"
              >
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <polyline points="9,18 15,12 9,6"></polyline>
                </svg>
              </button>
            </div>
          {% endif %}
        {% else %}
          <div class="ai-collection-showcase__empty-products-{{ ai_gen_id }}">
            This collection doesn't have any products yet.
          </div>
        {% endif %}
      </div>
    {% else %}
      <div class="ai-collection-showcase__empty-products-{{ ai_gen_id }}">
        Select a collection to display products
      </div>
    {% endif %}
  </div>

  <div class="ai-collection-showcase__image-{{ ai_gen_id }}">
    <div class="ai-collection-showcase__image-wrapper-{{ ai_gen_id }}">
      {% if block.settings.collection_image %}
        <img
          src="{{ block.settings.collection_image | image_url: width: 800 }}"
          alt="{{ block.settings.collection_image.alt | escape }}"
          width="800"
          height="800"
          loading="lazy"
        >
      {% elsif block.settings.featured_collection and block.settings.featured_collection.image %}
        <img
          src="{{ block.settings.featured_collection.image | image_url: width: 800 }}"
          alt="{{ block.settings.featured_collection.image.alt | escape }}"
          width="800"
          height="800"
          loading="lazy"
        >
      {% else %}
        <div class="ai-collection-showcase__image-placeholder-{{ ai_gen_id }}">
          {{ 'collection-1' | placeholder_svg_tag }}
          <div class="ai-collection-showcase__empty-state-{{ ai_gen_id }}">
            Add a collection image
          </div>
        </div>
      {% endif %}
    </div>
  </div>
</collection-showcase-{{ ai_gen_id }}><script>
  (function() {
    class CollectionShowcase{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentIndex = 0;
        this.productsPerView = parseInt(this.dataset.productsPerView) || 3;
      }

      connectedCallback() {
        this.track = this.querySelector('.ai-collection-showcase__products-track-{{ ai_gen_id }}');
        this.prevButton = this.querySelector('.ai-collection-showcase__prev-{{ ai_gen_id }}');
        this.nextButton = this.querySelector('.ai-collection-showcase__next-{{ ai_gen_id }}');
        this.products = this.querySelectorAll('.ai-collection-showcase__product-{{ ai_gen_id }}');

        if (!this.track || this.products.length === 0) return;

        this.maxIndex = Math.max(0, this.products.length - this.productsPerView);
        this.setupEventListeners();
        this.updateButtons();
      }

      setupEventListeners() {
        if (this.prevButton) {
          this.prevButton.addEventListener('click', () => this.goToPrevious());
        }
        if (this.nextButton) {
          this.nextButton.addEventListener('click', () => this.goToNext());
        }
      }

      goToPrevious() {
        if (this.currentIndex > 0) {
          this.currentIndex--;
          this.updateCarousel();
        }
      }

      goToNext() {
        if (this.currentIndex < this.maxIndex) {
          this.currentIndex++;
          this.updateCarousel();
        }
      }

      updateCarousel() {
        if (!this.track || this.products.length === 0) return;

        const productWidth = this.products[0].offsetWidth;
        const gap = 20;
        const translateX = -(this.currentIndex * (productWidth + gap));
        
        this.track.style.transform = `translateX(${translateX}px)`;
        this.updateButtons();
      }

      updateButtons() {
        if (this.prevButton) {
          this.prevButton.disabled = this.currentIndex === 0;
        }
        if (this.nextButton) {
          this.nextButton.disabled = this.currentIndex >= this.maxIndex;
        }
      }
    }

    customElements.define('collection-showcase-{{ ai_gen_id }}', CollectionShowcase{{ ai_gen_id }});
  })();
</script>

